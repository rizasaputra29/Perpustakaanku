{
  "version": 2,
  "builds": [
    {
      "src": "api/index.mjs",
      "use": "@vercel/node",
      "config": {
        "helpers": false,
        "external": ["pg-native"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.mjs"
    },
    {
      "src": "/[^.]*$",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
